// Mixins
@import "mixins/spacing.less";

.clearfix() {
  &:before,
  &:after {
    content: " "; // 1
    display: table; // 2
  }
  &:after {
    clear: both;
  }
}


 //渐变
.generate-linear-gradient(@startColor, @endColor, @direction: right){
	//background: @endColor;//如果不支持该属性，就用纯色
	filter: progid:DXImageTransform.Microsoft.Gradient(startColorStr=@startColor,endColorStr=@endColor,gradientType='1');
  	background: -webkit-linear-gradient(@direction, @startColor, @endColor); /* Safari 5.1 to 6.0 */
	background: -o-linear-gradient(@direction, @startColor, @endColor); /* Opera 11.1 to 12.0 */
	background: -moz-linear-gradient(@direction, @startColor, @endColor); /* Firefox 3.6 to 15 */
	background: linear-gradient(to @direction, @startColor, @endColor); /* 标准语法 */
}

.generate-linear-gradient-bottom(@startColor, @endColor, @direction: bottom){
	//background: @endColor;//如果不支持该属性，就用纯色
	filter: progid:DXImageTransform.Microsoft.Gradient(startColorStr=@startColor,endColorStr=@endColor,gradientType='0');
  	background: -webkit-linear-gradient(@direction, @startColor, @endColor); /* Safari 5.1 to 6.0 */
	background: -o-linear-gradient(@direction, @startColor, @endColor); /* Opera 11.1 to 12.0 */
	background: -moz-linear-gradient(@direction, @startColor, @endColor); /* Firefox 3.6 to 15 */
	background: linear-gradient(to @direction, @startColor, @endColor); /* 标准语法 */
}