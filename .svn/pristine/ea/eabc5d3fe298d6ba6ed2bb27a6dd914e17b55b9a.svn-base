/*登录样式*/
@login-h:900px;
.login-wrapper{
	position: absolute;
	width: 100%;
	height: 100%;
	min-height: 600px;
	left: 0;
	top: 0;
	background: #fff2f2;
	overflow: hidden;
}

.login-main{
	position: absolute;
	width: 100%;
	left: 0;
	top: 0;
	bottom: 100px;
	background: #00b386;
}
@media (min-height: @login-h){
	.login-main{
		bottom: 180px;
	}
}
.ie-adjust{
	.login-main{
		bottom: 180px;
	}
}

.login-footer{
	height: 100px;
	bottom: 0;
	width: 100%;
	left: 0;
	position: absolute;
	color: #5a5a5a;
}
@media (min-height: @login-h){
	.login-footer{
		height: 180px;
	}
}
.ie-adjust{
	.login-footer{
		height: 180px;
	}
}

.login-main-center{
	height: 498px;
	top: 50%;
	left: 0;
	margin-top: -249px;
	position: relative;
	background: url(images/login-bg-left.png) no-repeat left center;
}

.login-box{
	position: absolute;
	height: 100%;
	right: 0;
	top: 0;
	width: 489px;
	background: url(images/login-bg-right.png) no-repeat center center;
	right: -27px;
}

.login-container{
	width: 380px;
	height: 320px;
	background-color: #fff;
	border-radius: 5px;
	position: absolute;
	right: 56px;
	top: 50%;
	margin-top: -160px;
	box-sizing: border-box;
	.login-con-in{
		position: relative;
		height: 260px;
	}
}

.login-btn{
	font-size: 18px;
	background:#00b386;
	border-radius: 5px;
	bottom: 0px;
	left: 0;
	position: absolute;
	width: 100%;
}

.login-form-group{
	position: relative;
	.icomoon-icon{
		position: absolute;
		color: #999999;
		font-size: 17px;
		line-height: 1;
		left: 12px;
		top: 50%;
		margin-top: -8px;
		z-index: 2;
		~ .layui-input{
			padding-left: 35px;
		}

		~ .tips_par_box{
			.layui-input{
				padding-left: 35px;
			}
		}
		~ .re-send-qr{
			color: #00b386;
			position: absolute;
			z-index: 2;
			font-size: 14px;
			height: 38px;
			line-height: 38px;
			width: 102px;
			text-align: center;
			right: 0;
			top: 0;
			cursor: pointer;
			&.disabled{
				color: #999;
				cursor: not-allowed;
			}
			~ .layui-input{
				padding-right: 110px;
			}
			~ .tips_par_box{
				.layui-input{
					padding-right: 110px;
				}
			}
		}
	}
}