.overlay-wrapper{
	position: relative;
	>.overlay{
		position: absolute;
	    top: 0;
	    left: 0;
	    width: 100%;
	    height: 100%;
	    z-index: 50;
	    background: rgba(255,255,255,0.7);
	    border-radius: 3px;
	    >.layui-icon{
	    	position: absolute;
		    top: 50%;
		    left: 50%;
		    margin-left: -20px;
		    margin-top: -20px;
		    color: #000;
		    font-size: 40px;
	    }
	}
}