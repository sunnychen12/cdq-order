/*登录样式*/
.login-page{
	position: absolute;
	width: 100%;
	height: 100%;
	&.stu-login-page{
		background: url(images/login-bg.jpg) center no-repeat #45c5d1;
		background-size: cover;
	}
	&.admin-login-page{
		background: url(images/login-bg2.jpg) center no-repeat #4d70e2;
		background-size: cover;
		.login-index-wrap{
			width: 840px;
			min-height: 442px;
			float: none;
			margin: 0 auto;
			padding: 25px 25px 25px 430px;
			background: url(images/login-bg3.png) 50px center no-repeat #fff;
			.login-index-inner{
				border-left: #e0e0e0 1px solid;
				padding-left: 60px;
				padding-bottom: 20px;
			}
			.title{
			    color: #4d70e2;
			}
			[data-role="submit"]{
				background: #4d70e2;
			}
		}
	}
	

	.login-container{
		width: 1038px;
		position: relative;
		height: 100%;
	}

	.login-index-wrap{
	  background-color: #fff;
	  border-radius: 5px;
	  float: right;
	  width: 366px;
	  padding: 20px;
	  box-sizing: border-box;
	  box-shadow: 0px 5px 15px rgba(51, 51, 51, 0.43);
	  .title{
	    color: #3abbd1;
	    font-size: 24px;
	    margin: 0;
	    text-align: center;
	    padding-top: 20px;
	  }
	  [data-role="submit"]{
	    font-size: 20px;
	    background: #3abbd1;
	    line-height: 52px;
	    height: 52px;
	    margin:20px 0 10px;
	  }
	}

	.login-control-group{
	  border: #dfdfdf 1px solid;
	  border-radius: 3px;
	  padding: 7px 0;
	  margin: 10px 0 20px;
	  
	  >div{
	    vertical-align: middle;
	  }
	  .icomoon-icon{
	    font-size: 24px;
	    color: #9c9d9c;
	    margin-top: 5px;
	  }
	  .media-side{
	    padding: 0 10px 0 15px;
	  }
	  .ymz-box{
	    border-left:1px solid #e6e6e6;
	    padding-left: 20px;
	    padding-right: 20px;
	  }
	  .layui-input{
	    border: 0 none !important;
	    outline: none;
	    padding: 6px 12px;
	    padding-left:5px;
	    box-shadow: none;
	    font-size: 16px;
		height: 34px;
	  }
	}
	.get-qrcode{
		color: #3abbd1;
		font-size: 16px;
		&.disabled{
			color: #999;
		}
	}
}