            <div class="media login-control-group">
              <div class="media-side">
                <i class="icomoon-icon">&#xe900;</i>
              </div>
              <div class="media-body">
                <input type="password" class="layui-input" placeholder="请输入密码">
              </div>
            </div>
            
            <div class="media login-control-group">
              <div class="media-side">
                <i class="icomoon-icon">&#xe901;</i>
              </div>
              <div class="media-body">
                <input type="text" class="layui-input" placeholder="请输入验证码">
              </div>
              <div class="media-side ymz-box text-nowrap">
                <div style="min-width:71px;">
                  <img src="dist/images/yzm.png" width="100%" height="36">
                </div>
              </div>
            </div>

            <div>
              <button type="button" class="layui-btn layui-btn-fluid layui-btn-lg" data-role="submit">登录</button>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

