<script type="text/javascript">
layui.use(['element','form','jPages'], function(){
  var element=layui.element;

  //页码索引 分页
  $("div.holder").jPages({
    containerID  : "itemContainer",
    perPage      : 7*5,
    midRange     : 4,
    previous     : '',
    next         : '',
    delay        : 0
