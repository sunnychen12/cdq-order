.site-side{
	.box{
		>.box-header{
			padding: 0 20px;
			height: 48px;
			line-height: 48px;
			color: #fff;
			font-size: 16px;
			background: #7a8da0;
			border: 0 none;
			border-top-left-radius: 3px;
			border-top-right-radius: 3px;
		}
		.box-body{
			padding: 15px;
		}
	}
}

.ans-card{
	margin-left: -5px;
	margin-right: -5px;
	li{
		width: 20%;
		text-align: center;
		padding: 7px 5px;
		float: left;
		box-sizing: border-box;
		span{
			display: inline-block;
			width: 34px;
			height: 34px;
			line-height: 34px;
			color: #fff;
			font-size: 16px;
			background: #d4d4d4;
			border-radius: 50%;
			cursor: pointer;
		}
		&.ans-card-green{
			span{
				.generate-linear-gradient(#57c99a,#2fbfac);
			}
		}
		&.ans-card-orange{
			span{
				.generate-linear-gradient(#fd7a40,#f95e3f);
			}
		}
	}
}

.camera-box{
	min-height: 150px;
	border-radius: 10px;
	overflow: hidden;
}
.camera-tips{
	color: #5f5f5f;
	font-size: 14px;
	line-height: 20px;
}

//练习题样式
.subject-wrap{
	
}
.subject-box{
	padding: 10px 30px;
}
.subject-type-name{
	margin-bottom: 30px;
	span{
		display: inline-block;
		color: #fff;
		line-height: 36px;
		padding: 0px 20px;
		border-radius: 18px;
		.generate-linear-gradient(#57c99a,#2fbfac);
	}
}

.synthesis-subject{
	line-height: 24px;
	font-size: 18px;
}
.subject-main-item{
	margin-top: 30px;
}
.subject-title{
	font-size: 16px;
}
.sel-list{
	margin-top: 10px;
	color: #888888;
}
.subject-ans-panel{
	border-radius: 5px;
	overflow: hidden;
	margin-top: 30px;
	.media-side{
		width: 100px;
		font-size: 16px;
		text-align: center;
		vertical-align: middle;
	}
	.media-body{
		vertical-align: middle;
		padding:15px 20px;
		li{
			line-height: 1.4;
			margin: 5px 0;
		}
	}
	&.subject-right{
		background: #fafdfc;
		.media-side{
			background: #d5efe9;
		}
		.tips{
			color: #05a27f;
		}
	}
	&.subject-error{
		background: #fafafa;
		.media-side{
			background: #faebe2;
		}
		.tips{
			color: #fb6b3d;
		}
	}
}

//练题中心
.practice-center{
	.practice-header{
		padding: 10px 25px;
		.breadcrumb{
			float: left;
			padding-top: 3px;
		}
		.subject-btn{
			float: right;
		}	
	}
	.practice-body{
		padding:30px 25px;
	}
}

.practice-center-panel{
	box-shadow: 0 0px 15px #fafafa;
	border-radius: 3px;
	overflow: hidden;
	.p-txt{
		color: #555555;
		line-height: 22px;
		padding: 30px 0;
		border-bottom: #ededed 1px solid;
	}
	>.p-header{
		height: 60px;
		line-height: 60px;
		font-size: 22px;
		color: #fff;
		text-align: center;
	}
	>.p-body{
		border: #ededed 1px solid;
		border-top: 0 none;
		padding: 0 30px 30px;
	}
	.layui-btn{
		font-size: 22px;
		height: 50px;
		line-height: 50px;
		width: 70%;
		margin: 0 auto;
	}
	.p-bar{
		font-size: 12px;
		padding: 30px 0;
		border-top: #ededed 1px solid;
		&:first-child{
			border-top: 0 none;
		}
		.txt1{
			line-height: 1;
			margin-bottom: 10px;
		}
		.txt2{
			line-height: 1;
		}
		.txt2-1{
			font-size: 22px;
		}
		.media-body{
			width: 50%;
			text-align: center;
			&:last-child{
				border-left: #cdd2dc 1px solid;
			}
		}	
	}
	&.pcp-1{
		>.p-header{
			.generate-linear-gradient(#58c99a, #29bdaa)
		}
		.p-bar{
			.txt2-1{
				color: #3dc2a3;
			}
		}
		.layui-btn{
			border-color: #58c99a;
			color: #58c99a;
		}
	}
	&.pcp-2{
		>.p-header{
			.generate-linear-gradient(#5fabfa, #617df7)
		}
		.p-bar{
			.txt2-1{
				color: #70b9ff;
			}
		}
		.layui-btn{
			border-color: #5eaefa;
			color: #5eaefa;
		}
	}
	&.pcp-3{
		>.p-header{
			.generate-linear-gradient(#ffb66b, #fb9856)
		}
		.p-bar{
			.txt2-1{
				color: #fca25d;
			}
		}
		.layui-btn{
			border-color: #fca25d;
			color: #fca25d;
		}
	}
	&.pcp-4{
		>.p-header{
			.generate-linear-gradient(#fd7a40, #f9593a)
		}
		.p-bar{
			.txt2-1{
				color: #fc733e;
			}
		}
		.layui-btn{
			border-color: #fc733e;
			color: #fc733e;
		}
	}
}

@media (max-width:420px){
	.practice-center{
		>.practice-header{
			padding: 10px 15px;
		}
		>.practice-body{
			padding: 15px;
		}
	}
	.practice-center-panel{
		.layui-btn.layui-btn-fluid{
			width: 100%;
		}
	}
}