<script type="text/javascript">
layui.use(['element','form','jPages','slimScroll','layer'], function(){
  var element=layui.element
      ,form = layui.form
      ,layer = layui.layer;

  //滚动条
  function resizeBar(){
    $("[ele-scroll]:visible").each(function(index, el) {
      $(this).slimScroll({destroy: true}).height('auto');
      $(this).slimscroll({
        height: 'auto',
        color: "#747474",
        alwaysVisible:true,
        size: "6px"
      });
    });
  }
  $(window).on('resize', function(event) {
    resizeBar();
  }).trigger('resize');

  //页码索引 分页
  $("div.holder").jPages({
    containerID  : "itemContainer",
    perPage      : 7*5,
    midRange     : 4,
    previous     : '',
    next         : '',
    delay        : 0
  });


  $(document)
  //提交试卷
  .on('click', '[data-btn="submit-paper"]', function(event) {
    layer.confirm('你尚有18题未做完，未做的题目将无法得分，确定要提交？', {
      icon: 0
    }, function(index){
      window.location.href="test-study-result-page.html";
      layer.close(index);//关闭弹窗
    }, function(index){
      layer.close(index);//关闭弹窗
    });
  });


  //准备做题 提示
  layer.confirm('\
    <div>本测试，有以下三种题型，共60题，答题时间90分钟，满分100分，60分以上算及格，请认真答题！</div>\
    <ul>\
      <li>1、单项选题，请选择一个答案（共20题，每题2分，共40分）</li>\
      <li>2、多项选题，请选择一个答案（共20题，每题2分，共40分）</li>\
      <li>3、判断题，请选择一个答案（共20题，每题1分，共20分）</li>\
    </ul>\
  ', {
    title:'准备做题',
    area: '500px',
    btn: ['开始答题','我再想想'] //按钮
  }, function(index){
    layer.close(index);
  }, function(index){
    layer.close(index);
  });
});
</script>
